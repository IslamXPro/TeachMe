<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    android:layout_marginBottom="10dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/rv_course_img"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/portret1"
            android:scaleType="centerCrop"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rv_mentor_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/rv_course_img"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/portret1"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/rv_mentor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/rv_mentor_img"
            app:layout_constraintLeft_toRightOf="@id/rv_mentor_img"
            android:layout_marginStart="10dp"
            android:text="Sardor Qodirov"
            android:textSize="16sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/rv_mentor_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rv_mentor_name"
            app:layout_constraintLeft_toRightOf="@id/rv_mentor_img"
            android:layout_marginStart="10dp"
            android:text="Grafik dizayner"/>
        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DAE2E6"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/rv_mentor_img"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/rv_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/line1"
            app:layout_constraintLeft_toLeftOf="@id/rv_mentor_img"
            android:layout_marginTop="10dp"
            android:text="Super Photoshop kursi"
            android:textColor="@color/black"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/rv_course_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rv_course_name"
            app:layout_constraintLeft_toLeftOf="@id/rv_course_name"
            android:layout_marginTop="70dp"
            android:text="6 soat 48 daqiqa - 48 ta dars"/>
        <ImageView
            android:id="@+id/save_btn"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/save_ic"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>