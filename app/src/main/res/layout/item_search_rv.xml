<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:cardElevation="10dp">
        <ImageView
            android:id="@+id/rv_course_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/portret1"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/rv_course_name"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/card1"
        app:layout_constraintLeft_toRightOf="@id/card1"
        android:layout_marginStart="15dp"
        android:text="Super Photoshop kursi"
        android:textSize="16sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/rv_mentor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rv_course_name"
        app:layout_constraintLeft_toLeftOf="@id/rv_course_name"
        android:layout_marginTop="5dp"
        android:text="Sardor Qodirov"/>

    <ImageView
        android:id="@+id/time_ic"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/time_ic"
        app:layout_constraintLeft_toLeftOf="@id/rv_course_name"
        app:layout_constraintBottom_toBottomOf="@id/card1"/>
    <TextView
        android:id="@+id/rv_course_time_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/time_ic"
        app:layout_constraintLeft_toRightOf="@id/time_ic"
        app:layout_constraintBottom_toBottomOf="@id/time_ic"
        android:textColor="#7F99A9"
        android:text="48 daq"
        android:layout_marginStart="5dp"/>
    <ImageView
        android:id="@+id/profile_ic"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/profile_ic1"
        app:layout_constraintLeft_toRightOf="@id/rv_course_time_min"
        app:layout_constraintTop_toTopOf="@id/time_ic"
        android:layout_marginStart="15dp"/>
    <TextView
        android:id="@+id/rv_student_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/profile_ic"
        app:layout_constraintLeft_toRightOf="@id/profile_ic"
        app:layout_constraintBottom_toBottomOf="@id/profile_ic"
        android:textColor="#7F99A9"
        android:text="17k o'quvchi"
        android:layout_marginStart="5dp"/>
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DAE2E6"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/card1"
        android:layout_marginTop="15dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>