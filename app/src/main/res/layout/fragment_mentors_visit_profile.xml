<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MentorsVisitProfile"
    android:scrollbars="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/constraint">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/back_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/back_img"/>

    <TextView
        android:id="@+id/mentor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/back_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/back_btn"
        android:text="Muhammadali Eshonqulov"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mentor_img"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintTop_toBottomOf="@id/back_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:src="@drawable/portret1"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/txtm1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/mentor_img"
        app:layout_constraintLeft_toRightOf="@id/mentor_img"
        app:layout_constraintRight_toLeftOf="@id/txtm2"
        android:text="Obunachilar"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/mentor_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="178k"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/txtm1"
        app:layout_constraintLeft_toLeftOf="@id/txtm1"
        app:layout_constraintRight_toRightOf="@id/txtm1"/>
    <TextView
        android:id="@+id/txtm2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txtm1"
        app:layout_constraintLeft_toRightOf="@id/txtm1"
        app:layout_constraintRight_toLeftOf="@id/txtm3"
        android:text="Obunalar"
        android:textSize="12sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/mentor_follows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="168"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/txtm2"
        app:layout_constraintLeft_toLeftOf="@id/txtm2"
        app:layout_constraintRight_toRightOf="@id/txtm2"/>
    <TextView
        android:id="@+id/txtm3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txtm2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txtm2"
        android:text="Videolar"
        android:textSize="12sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/mentor_videos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="321"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/txtm3"
        app:layout_constraintLeft_toLeftOf="@id/txtm3"
        app:layout_constraintRight_toRightOf="@id/txtm3"/>

    <ImageView
        android:id="@+id/notification_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/mentor_followers"
        app:layout_constraintLeft_toRightOf="@id/mentor_img"
        app:layout_constraintRight_toLeftOf="@id/sms_btn_toMentor"
        android:src="@drawable/notification_ic"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/sms_btn_toMentor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/notification_btn"
        app:layout_constraintBottom_toBottomOf="@id/notification_btn"
        app:layout_constraintLeft_toRightOf="@id/notification_btn"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Xabar yuborish"
        android:textColor="@color/black"
        android:background="@drawable/sms_back_btn"
        android:padding="7dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_profile_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mentor_img"
        android:layout_marginTop="30dp"
        tools:listitem="@layout/item_rv_video"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        android:orientation="vertical"
        android:paddingEnd="3dp"
        tools:ignore="RtlSymmetry" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>