<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rv_mentor_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/portret1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/rv_mentor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/rv_mentor_img"
        app:layout_constraintLeft_toRightOf="@id/rv_mentor_img"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Osmondagi bolalar"
        android:textSize="18sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/rv_mentor_follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rv_mentor_name"
        app:layout_constraintLeft_toLeftOf="@id/rv_mentor_name"
        android:textColor="#7F99A9"
        android:text="37.6k obunachi"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/rv_follow_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.4"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"
        android:textColor="@color/yashil"
        android:background="@drawable/follow_back"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:text="Followed"/>
</androidx.constraintlayout.widget.ConstraintLayout>