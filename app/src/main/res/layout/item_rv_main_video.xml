<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rv_mentor_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/portret1"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"/>
    <TextView
        android:id="@+id/rv_mentor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/rv_mentor_img"
        app:layout_constraintBottom_toBottomOf="@id/rv_mentor_img"
        app:layout_constraintLeft_toRightOf="@id/rv_mentor_img"
        android:layout_marginStart="15dp"
        android:text="Sardor Qodirov"
        android:textSize="16sp"
        android:textColor="@color/black"/>
    <VideoView
        android:id="@+id/rv_video"
        android:layout_width="0dp"
        android:layout_height="350dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_mentor_img"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:id="@+id/rv_play_btn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/play_ic"
        app:layout_constraintTop_toTopOf="@id/rv_video"
        app:layout_constraintBottom_toBottomOf="@id/rv_video"
        app:layout_constraintLeft_toLeftOf="@id/rv_video"
        app:layout_constraintRight_toRightOf="@id/rv_video"/>
    <ImageView
        android:id="@+id/rv_like_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/rv_video"
        app:layout_constraintLeft_toLeftOf="@id/rv_video"
        android:layout_marginTop="10dp"
        android:src="@drawable/like_ic"/>
    <ImageView
        android:id="@+id/rv_comment_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toRightOf="@id/rv_like_btn"
        app:layout_constraintTop_toTopOf="@id/rv_like_btn"
        android:layout_marginStart="15dp"
        android:src="@drawable/comment_ic"/>
    <ImageView
        android:id="@+id/rv_download_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toRightOf="@id/rv_comment_btn"
        app:layout_constraintTop_toTopOf="@id/rv_like_btn"
        android:layout_marginStart="15dp"
        android:src="@drawable/download_ic"/>

</androidx.constraintlayout.widget.ConstraintLayout>