<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rv_mentor_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/portret1"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"/>
    <TextView
        android:id="@+id/rv_mentor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/rv_mentor_img"
        app:layout_constraintBottom_toBottomOf="@id/rv_mentor_img"
        app:layout_constraintLeft_toRightOf="@id/rv_mentor_img"
        android:layout_marginStart="15dp"
        android:text="Sardor Qodirov"
        android:textSize="16sp"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/rv_mentor_course_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/rv_mentor_img"
        android:src="@drawable/portret1"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nomi:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/rv_mentor_course_img"
        app:layout_constraintLeft_toLeftOf="@id/rv_mentor_course_img"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/rv_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Super Photoshop"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/rv_mentor_course_img"
        app:layout_constraintLeft_toRightOf="@id/txt1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Izoh:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        app:layout_constraintLeft_toLeftOf="@id/rv_mentor_course_img"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/rv_course_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 dan professionalikga qadam"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/rv_course_name"
        app:layout_constraintLeft_toRightOf="@id/txt2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mentor:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        app:layout_constraintLeft_toLeftOf="@id/rv_mentor_course_img"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/rv_mentor_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sardor Qodirov"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/rv_course_note"
        app:layout_constraintLeft_toRightOf="@id/txt3"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Narxi:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/txt3"
        app:layout_constraintLeft_toLeftOf="@id/rv_mentor_course_img"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/rv_course_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300 000 so'm"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/rv_mentor_name2"
        app:layout_constraintLeft_toRightOf="@id/txt4"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sotilgan:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/txt4"
        app:layout_constraintLeft_toLeftOf="@id/rv_mentor_course_img"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/rv_course_sold_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="195 marta"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/rv_course_cost"
        app:layout_constraintLeft_toRightOf="@id/txt5"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/rv_btn_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sotib olish"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/rv_course_sold_count"
        android:background="@drawable/follow_back_full"
        android:textColor="@color/white"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>