<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileSetting">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_img"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:src="@drawable/portret1"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/profile_img"
        app:layout_constraintLeft_toRightOf="@id/profile_img"
        app:layout_constraintRight_toLeftOf="@id/edit_btn"
        app:layout_constraintBottom_toBottomOf="@id/profile_img"
        android:text="Rustamjon Abdullayev"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/edit_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/profile_name"
        app:layout_constraintBottom_toBottomOf="@id/profile_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/profile_name"
        android:src="@drawable/edit_ic"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/profile_img">
    <ImageView
        android:id="@+id/img1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/setting_ic"/>
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sozlamalar"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/img1"
        app:layout_constraintTop_toTopOf="@id/img1"
        android:layout_marginStart="20dp"/>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/img1"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/img1"
        android:layout_marginEnd="15dp"/>
        <ImageView
            android:id="@+id/img2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/img1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/info_ic"/>
        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dastur haqida"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/img2"
            app:layout_constraintTop_toTopOf="@id/img2"
            android:layout_marginStart="20dp"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="@id/img2"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/img1"
            android:layout_marginEnd="15dp"/>
        <ImageView
            android:id="@+id/img3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/img2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/help_ic"/>
        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yordam"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/img3"
            app:layout_constraintTop_toTopOf="@id/img3"
            android:layout_marginStart="20dp"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="@id/img3"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/img1"
            android:layout_marginEnd="15dp"/>
        <ImageView
            android:id="@+id/img4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/img3"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/exit_ic"/>
        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chiqish"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/img4"
            app:layout_constraintTop_toTopOf="@id/img4"
            android:layout_marginStart="20dp"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="@id/img4"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/img1"
            android:layout_marginEnd="15dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>